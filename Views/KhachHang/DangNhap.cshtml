@model app1.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Đăng Nhập</h1>
        <div class="row justify-content-center">
            <!-- Centering the row -->
            <div class="col-md-6">
                <!-- Set to 6 columns for 50% width on medium+ screens -->
                <form asp-action="DangNhap" class="form-item" asp-route-returnurl ="@ViewBag.returnUrl" >
                    <div class="form-item mb-3">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" type="text" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" type="password" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                    <a asp-action="QuenMatKhau" asp-controller="KhachHang" class="">Quên mật khẩu</a>
                </form>
            </div>
        </div>
    </div>
</div>
