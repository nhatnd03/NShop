@model app1.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Đăng ký</h1>
        <div class="row justify-content-center">
            <!-- Centering the row -->
            <div class="col-md-6">
                <!-- Set to 6 columns for 50% width on medium+ screens -->
                <form asp-action="DangKy" class="form-item" enctype="multipart/form-data">
                    <div class="form-item mb-3">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" type="text" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" type="password" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" type="text" class="form-control">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label class="form-label my-3">Giới tính</label>
                        <div class="d-flex align-items-center">
                            <div class="form-check me-3">
                                <input asp-for="@Model.GioiTinh" type="radio" value="true" id="male" class="form-check-input">
                                <label for="male" class="form-check-label">Nam</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.GioiTinh" type="radio" value="false" id="female" class="form-check-input">
                                <label for="female" class="form-check-label">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="@Model.GioiTinh" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                        <input asp-for="@Model.NgaySinh" type="date" class="form-control">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" type="text" class="form-control">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DienThoai" type="number" class="form-control">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Email" type="email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.Hinh" class="form-label my-3"></label>
                        <input name="Hinh" type="file" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>
@if(ViewBag.message!= null)
{
    <div class="text-danger">@ViewBag.message</div>
}