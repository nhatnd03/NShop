    $(document).on('click', '.remove-cart-item', function () {
        const itemId = $(this).data('item-id');
        $.ajax({
            url: '/Cart/RemoveCart',
            type: 'POST',
            data: { id: itemId },
            success: function (response) {
                $(`tr:has(.remove-cart-item[data-item-id="${itemId}"])`).remove();
